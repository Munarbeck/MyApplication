<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Buttom.Base" parent="Widget.MaterialComponents.Button">

        <item name="android:layout_width">81dp</item>
        <item name="android:layout_height">81dp</item>
        <item name="cornerRadius">200dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:insetTop">0sp</item>
        <item name="android:insetBottom">0sp</item>

    </style>
    
<style name="Button.Gray" parent="Buttom.Base">
    <item name="android:textColor">@color/black</item>
    <item name="backgroundTint">@color/gray</item>
</style>
    <style name="Button.Orange" parent="Buttom.Base">
    <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/orange</item>
</style>

    <style name="Button.Gray.Dark" parent="Buttom.Base">
    <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/gray_dark</item>
</style>
    
</resources>